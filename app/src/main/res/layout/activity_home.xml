<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.constraint.ConstraintLayout
                android:layout_width="350dp"
                android:layout_height="match_parent"
                android:background="#383838">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="172dp"
                    android:layout_height="197dp"
                    android:layout_marginTop="84dp"
                    android:src="@drawable/wrangler"
                    android:visibility="visible"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/include2" />

                <include
                    android:id="@+id/include2"
                    layout="@layout/fragment_vehicle_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintHorizontal_bias="0.4"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <include
                    android:id="@+id/include"
                    layout="@layout/fragment_vehicle_gear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/view"
                    android:layout_width="300dp"
                    android:layout_height="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="6dp"
                    android:background="#fff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/include" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="301dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="6dp"
                    android:text="2016 Jeep Wrangler 75th Anniversary Edition"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    app:layout_constraintHorizontal_bias="0.51"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <include
                    layout="@layout/fragment_vehicle_info"
                    android:layout_width="282dp"
                    android:layout_height="96dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

            </android.support.constraint.ConstraintLayout>


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/black"
            android:orientation="horizontal">

            <Button
                android:id="@+id/internalTempIconButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="{faw-thermometer-three-quarters}"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/internalTempButton"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="68°"
                android:textAlignment="viewStart"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/muteButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTint="@android:color/white"
                android:text="{faw-volume-off}&#10;MUTE"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/backupButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTint="@android:color/white"
                android:text="{faw-video-camera}&#10;BACKUP"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/voiceButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTint="@android:color/white"
                android:text="{faw-microphone}&#10;VOICE"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/clockButton"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="12:00 PM"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/webButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTint="@android:color/white"
                android:text="{faw-globe}&#10;WEB"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/appsButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTint="@android:color/white"
                android:onClick="showApps"
                android:text="{faw-th}&#10;APPS"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/settingsButton"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableTint="@android:color/white"
                android:text="{faw-wrench}&#10;SETTINGS"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/weatherButton"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="--°"
                android:textAlignment="textEnd"
                android:textColor="#ffffff"
                android:textSize="36sp" />

            <Button
                android:id="@+id/weatherIconButton"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/open_sans_light"
                android:text="{wic-day-cloudy}"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="36sp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
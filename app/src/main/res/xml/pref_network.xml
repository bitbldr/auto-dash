<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- A 'parent' preference, which enables/disables child preferences (below)
         when checked/unchecked. -->

    <!-- Allows the user to choose a ringtone in the 'notification' category. -->
    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->
    <!-- NOTE: RingtonePreference's summary should be set to its value by the activity code. -->

    <!-- NOTE: This preference will be enabled only when the checkbox above is checked. -->

    <PreferenceCategory android:title="Primary Network">

        <EditTextPreference
            android:id="@+id/hotspotNetworkSSID"
            android:key="primary_network_ssid"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Network SSID" />
        <EditTextPreference
            android:id="@+id/hotspotNetworkPass"
            android:inputType="textPassword"
            android:key="primary_network_pass"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Secondary Network">

        <EditTextPreference
            android:id="@+id/homeNetworkSSID"
            android:key="secondary_network_ssid"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Network SSID" />
        <EditTextPreference
            android:id="@+id/homeNetworkPass"
            android:inputType="textPassword"
            android:key="secondary_network_pass"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="Password" />
    </PreferenceCategory>
</PreferenceScreen>
